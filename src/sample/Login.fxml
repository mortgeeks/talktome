<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400" prefWidth="500" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Login">
   <children>
      <VBox layoutX="188.0" layoutY="144.0" prefHeight="112.0" prefWidth="124.0">
         <children>
            <TextField fx:id="userName" promptText="User Name" />
            <PasswordField fx:id="password" promptText="Password" />
            <BorderPane prefHeight="40.0" prefWidth="124.0">
               <left>
                  <Button id="login" fx:id="login" mnemonicParsing="false" onAction="#login" text="Log In" BorderPane.alignment="CENTER" />
               </left>
               <right>
                  <Button id="exit" fx:id="exit" mnemonicParsing="false" onAction="#exit" text="Exit" BorderPane.alignment="CENTER" />
               </right>
            </BorderPane>
         </children>
      </VBox>
      <Label layoutX="134.0" layoutY="44.0" text="- Login -">
         <font>
            <Font name="System Bold" size="50.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
